{
  "name": "previousnext/bom-weather",
  "description": "PHP lib for accessing the Australian Bureau of Meteorology (BOM) weather forecasts and observations.",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Kim Pepper",
      "email": "kim@previousnext.com.au"
    }
  ],
  "require": {
    "php": "^7.2",
    "ext-curl": "*",
    "ext-xml": "*",
    "guzzlehttp/guzzle": "~6.3",
    "psr/log": "~1.0",
    "symfony/property-access": "~4.1",
    "symfony/serializer": "~4.1"
  },
  "require-dev": {
    "drupal/coder": "~8",
    "mikey179/vfsstream": "~1.6",
    "phpunit/phpunit": "~8.0",
    "symfony/phpunit-bridge": "~4.1"
  },
  "autoload": {
    "psr-4": {"BomWeather\\": "src/"}
  },
  "autoload-dev": {
    "psr-4": {"BomWeather\\Tests\\": "tests/"}
  },
  "config": {
    "bin-dir": "bin/",
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  }
}
